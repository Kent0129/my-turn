<div class="box">
  <div class="box-inner">
    <%= form_with model: @user, url: new_user_session_path, local: true do |f| %>
      <h1>ログイン</h1>
      <div class="box-email">
        <%= f.label :email, "Eメール" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="box-password">
        <div class="a-row">
          <div class="column">
            <%= f.label :password, "パスワード" %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <div class="box-login">
        <%= f.submit "ログイン" %>
        <% if devise_mapping.rememberable? %>
          <div class="remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember, "ログインしたままにする" %>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="box-newusr">
      <p><span>------------</span> 登録が済んでいない方はこちら <span>------------</span></p>
      <%= link_to "アカウントを作成", new_user_registration_path %>
    </div>
    <%= link_to 'トップページへ戻る', root_path %>
  </div>
</div>