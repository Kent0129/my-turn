
<div class="issue">
  <div class="issue-row">
    <%= form_with model: @turns, url: turns_path, local: true do |f| %>
      <h1>番号を発行する</h1>
      <div class='flex-num'>
          <div class="box-name">
          <%= f.text_field :name, class: 'text-field', placeholder:'名前を入力してください'%>
          </div>
          <% if @today_num_end.present? %>
          <%= f.hidden_field :number,class: 'number' , value: "#{@today_num_end += 1}", :readonly => true %>
          <% else %>
          <%= f.hidden_field :number,class: 'number' , value: "1", :readonly => true %>
          <% end %>
          <div class='box-issue'>
          <%= f.submit "発行" ,class:"submid" %>
          </div>
      </div>
     <% end %>
     <%= link_to 'トップページへ戻る', root_path, {class:'root_path'} %>
  </div>
</div>